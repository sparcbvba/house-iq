<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Onboarding Overview</h1>

    <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl">Ongoing Processes</h2>
        <button id="toggleCompleted" class="bg-blue-500 text-white px-4 py-2 rounded">Show Completed</button>
    </div>

    <div id="ongoingProcesses" class="space-y-4">
        <% ongoingProcesses.forEach(process=> { %>
            <div class="p-4 bg-white shadow rounded">
                <h3 class="text-lg font-semibold">
                    <%= process.title %>
                </h3>
                <p>
                    <%= process.description %>
                </p>
            </div>
            <% }) %>
    </div>

    <div id="completedProcesses" class="space-y-4 hidden">
        <% completedProcesses.forEach(process=> { %>
            <div class="p-4 bg-gray-200 shadow rounded">
                <h3 class="text-lg font-semibold">
                    <%= process.title %>
                </h3>
                <p>
                    <%= process.description %>
                </p>
            </div>
            <% }) %>
    </div>
</div>

<script>
    document.getElementById('toggleCompleted').addEventListener('click', function () {
        const completed = document.getElementById('completedProcesses');
        if (completed.classList.contains('hidden')) {
            completed.classList.remove('hidden');
            this.textContent = 'Hide Completed';
        } else {
            completed.classList.add('hidden');
            this.textContent = 'Show Completed';
        }
    });
</script>